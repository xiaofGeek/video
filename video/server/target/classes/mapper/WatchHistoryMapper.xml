<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.video.mapper.WatchHistoryMapper">
    <select id="getHistoryMovies" resultType="com.video.entity.WatchHistory">
        SELECT 
            id,
            user_id,
            movie_id,
            movie_name,
            last_episode,
            watch_time
        FROM watch_history
        WHERE user_id = #{userId}
        ORDER BY watch_time DESC
        LIMIT 10
    </select>
</mapper>